<style>
  .search-container {
    position: relative;
    width: 100%; /* make it flexible */
     
  }

  .input-search {
    width: 100%;
    padding: 10px 3rem 10px 1rem; /* rightâ€‘pad for the icon */
    border-radius: 50px;
    border: 1px solid #ccc;
    font-size: 17px;
    font-weight: 500;
    background: transparent;
  }

  .btn-search {
    position: absolute;
    top: 50%;
    right: 0.75rem; /* tweak until it lines up perfectly */
    transform: translateY(-50%);
    padding: 0;
    height: 80%;
    width: 10%;
    border-radius: 50%;
    background-color: #ff385c;
  }

  .btn-search:hover {
    border-radius: 50%;
    background-color: #e32548;
  }

  .btn-search i {
    font-size: 18px;
    pointer-events: none;
    color: white; /* so clicks go to the button itself */
  }
  .navbar-toggler {
    padding: 0 !important;
    margin: 0 !important;
  }
  
  @media (max-width: 375px) {
    .search-container {
      width: 100%;
      max-width: 100%;
      margin: 0 0.25rem;
    }
  
    .input-search {
      font-size: 15px;
      
    }
  
    .btn-search {
      width: 20%;
      right: 0.5rem;
     
    }

    
  }

  @media (min-width: 768px) {
    .search-container {
      flex: 1 1 100%;
      width: 450px; /* optional max */
    }
  }

  
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
